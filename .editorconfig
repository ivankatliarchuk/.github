# editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# 4 space indentation
[*.toml]
indent_style = space
indent_size = 2

# YAML Files
[*.{yml,yaml}]
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[*.{json,tpl}]
indent_style = space
indent_size = 2
